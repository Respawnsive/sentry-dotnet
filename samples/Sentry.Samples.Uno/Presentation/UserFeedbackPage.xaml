<Page x:Class="Sentry.Samples.Uno.Presentation.UserFeedbackPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Sentry.Samples.Uno.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer IsTabStop="True">
    <Grid utu:SafeArea.Insets="VisibleBounds">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <utu:NavigationBar Content="{Binding Title}" />

      <StackPanel Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Spacing="16"
            Margin="16">
        <TextBlock Text="User Feedback"
            Style="{StaticResource MaterialHeadline5}"
            HorizontalAlignment="Center" />
        
        <TextBlock Text="Submit feedback to help improve the app."
            TextWrapping="Wrap"
            Margin="0,8,0,16" />

        <TextBox Header="Name (Optional)"
            Text="{Binding Name, Mode=TwoWay}"
            PlaceholderText="Your name" />

        <TextBox Header="Email (Optional)"
            Text="{Binding Email, Mode=TwoWay}"
            PlaceholderText="your.email@example.com">
          <TextBox.InputScope>
            <InputScope>
              <InputScopeName NameValue="EmailSmtpAddress" />
            </InputScope>
          </TextBox.InputScope>
        </TextBox>

        <TextBox Header="Message"
            Text="{Binding Message, Mode=TwoWay}"
            PlaceholderText="Enter your feedback..."
            AcceptsReturn="True"
            TextWrapping="Wrap"
            MinHeight="120" />

        <Button Content="Submit Feedback"
            Command="{Binding SubmitFeedback}"
            HorizontalAlignment="Stretch" />
        
        <Button Content="Submit Feedback with Screenshot"
            Command="{Binding SubmitFeedbackWithScreenshot}"
            HorizontalAlignment="Stretch" />
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
