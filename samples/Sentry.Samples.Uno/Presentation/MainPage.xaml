<Page x:Class="Sentry.Samples.Uno.Presentation.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Sentry.Samples.Uno.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer IsTabStop="True">
    <Grid utu:SafeArea.Insets="VisibleBounds">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <utu:NavigationBar Content="{Binding Title}" />

      <StackPanel Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Spacing="16"
            Margin="16">
        <TextBlock Text="Sentry Uno Platform Sample"
            Style="{StaticResource MaterialHeadline5}"
            HorizontalAlignment="Center"
            Margin="0,0,0,24" />
        
        <TextBlock Text="Basic Operations"
            Style="{StaticResource MaterialSubtitle1}"
            Margin="0,0,0,8" />
        
        <TextBox Text="{Binding Name, Mode=TwoWay}"
            PlaceholderText="Enter your name:" />
        <Button Content="Go to Second Page"
            AutomationProperties.AutomationId="SecondPageButton"
            Command="{Binding GoToSecond}" />
        <Button Content="Capture message"
            Command="{Binding CaptureMessage}" />
        <Button Content="Add breadcrumb"
            Command="{Binding AddBreadcrumb}" />
        <Button Content="Capture exception"
            Command="{Binding CaptureException}" />
        
        <TextBlock Text="Sentry Features"
            Style="{StaticResource MaterialSubtitle1}"
            Margin="0,24,0,8" />
        
        <Button Content="Fingerprinting"
            Command="{Binding NavigateToFingerprinting}" />
        <Button Content="Structured Logs"
            Command="{Binding NavigateToLogs}" />
        <Button Content="Tracing"
            Command="{Binding NavigateToTracing}" />
        <Button Content="Profiling"
            Command="{Binding NavigateToProfiling}" />
        <Button Content="User Feedback"
            Command="{Binding NavigateToUserFeedback}" />
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
