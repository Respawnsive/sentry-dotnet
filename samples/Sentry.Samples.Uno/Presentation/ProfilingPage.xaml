<Page x:Class="Sentry.Samples.Uno.Presentation.ProfilingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Sentry.Samples.Uno.Presentation"
      xmlns:uen="using:Uno.Extensions.Navigation.UI"
      xmlns:utu="using:Uno.Toolkit.UI"
      xmlns:um="using:Uno.Material"
      NavigationCacheMode="Required"
      Background="{ThemeResource BackgroundBrush}">
  <ScrollViewer IsTabStop="True">
    <Grid utu:SafeArea.Insets="VisibleBounds">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition />
      </Grid.RowDefinitions>
      <utu:NavigationBar Content="{Binding Title}" />

      <StackPanel Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Spacing="16"
            Margin="16">
        <TextBlock Text="Profiling Examples"
            Style="{StaticResource MaterialHeadline5}"
            HorizontalAlignment="Center" />
        
        <TextBlock Text="Profiling captures performance data for transactions."
            TextWrapping="Wrap"
            Margin="0,8,0,16" />

        <Button Content="Start Profiled Transaction"
            Command="{Binding StartProfiledTransaction}" />
        
        <Button Content="Profiled Transaction with Exception"
            Command="{Binding ProfiledTransactionWithException}" />
        
        <TextBlock Text="Note: Profiling is automatically enabled when ProfilesSampleRate > 0"
            Style="{StaticResource MaterialBody2}"
            Margin="0,16,0,0"
            TextWrapping="Wrap" />
      </StackPanel>
    </Grid>
  </ScrollViewer>
</Page>
